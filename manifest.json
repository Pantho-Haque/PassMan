{
  "manifest_version": 3,
  "name": "Secure Password Manager",
  "version": "1.0.0",
  "description": "A secure password manager to store and manage your website credentials",
  "permissions": [
    "storage",
    "activeTab",
    "clipboardWrite"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "64": "icons/icon64.svg"      
    }
  },
  "icons": {
    "64": "icons/icon64.svg"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
